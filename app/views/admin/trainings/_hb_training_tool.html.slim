    td.action-btns.border-left
      = link_to raw("<span class='glyphicon glyphicon-trash'></span>"), "javascript:void(0)",
        method: :delete, data: {trigger_deletion: "{{id}}"}, title: "Supprimer", class: "btn btn-sm btn-danger"
