= handlebars_template(:TrainingTool) do
  tr.table-warning data-is-tool="{{id}}"
    = hidden_field_tag "training[tool_ids][]", "{{id}}" ,multiple: true
    td= "{{title}}"
    td= "{{axis_title}}"
    td= "{{tool_category_title}}"
    td colspan=2
